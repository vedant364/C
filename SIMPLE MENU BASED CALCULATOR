#include<stdio.h>
int main(){
    float num1, num2,choice,i=0;

    printf("Enter the first number. \n");
    scanf("%f",&num1);
    printf("Enter the second number. \n");
    scanf("%f",&num2);
    printf("\n");




    while (i==0)
    {
        /* code */

    printf("Select an option:- \n Enter 1 for addition \n Enter 2 for subtraction \n Enter 3 for multiplication \n Enter 4 for division \n ");
    printf("\n");
    
    scanf("%f",&choice);
    
    printf("\n");

    

    if(choice == 1){
        printf("The addition of %f and %f is %.2f \n",num1,num2,num1+num2);
        
    }else if(choice == 2){
        printf("The subtraction of %f and %f is %.2f \n",num1,num2,num1-num2);

    }else if(choice == 3){
        printf("The multiplication of %f and %f is %.2f \n",num1,num2,num1*num2);

    }else if(choice == 4){
        printf("The division of %f and %f is %.2f \n",num1,num2,num1/num2);

    }
    printf("\n\n");
    

    }


    return 0;

}
